<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      <%= link_to "新規アイデアを募集する", new_collection_path, class: "btn btn-info btn-lg" %>
    </div>
      <br/>
    </div>
  </div><br/>

  <div class="row">
    <% @collections.each do |collection| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= link_to collection.title, collections_path(@collection) %></div><br/>

       <div class="panel-body">
         <h4><%= simple_format collection.description %></h4></div><br/>
         <span><%= collection.user.fullname %></span><br/>
     </div>

    <%end%>
  </div>
