<%= form_for root_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder:"記事を検索する", class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= text_field_tag :date, params[:date], placeholder:"日付で記事を検索する", class: "form-control datepicker" %>
    </div>
  </div>
  <br/></br>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "submit", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<%end%>

<br/><br/><br/>

<div class="col-md-6">
<% @topics.each do |topic| %>
<ul>
<li><%= topic.title%></li><br/>
<li><%= simple_format topic.description %></li><br/>
<li><%= topic.user.fullname %></li><br/>
</ul>


  <div class="col-md-6 col-md-offset-3">
    <h3>
      <span id=""></span>
    </h3>
  </div>

  <script>
    $('#average_rating').raty({
      path: '/assets',
      readOnly: true,

    });
  </script>

<%end%>
