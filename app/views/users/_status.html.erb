<% @user ||= current_user %>
<div class="status">
  <a href="<%= following_user_path(@user) %>">
    <string id="following" class="stat">
      <%= @user.followings.count %>
    </string>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <string id="followers" class="stat">
      <%= @user.followers.count %>
    </string>
    followers
  </a>
</div>
