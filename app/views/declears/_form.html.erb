<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-normal" data-toggle="modal" data-target="#myModal">
  アイデアを回答する</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-left">アイデアを回答する</h4>
      </div>
      <div class="modal-body">
        <%= form_for ([@collection, @collection.declears.create]) do |f| %>

         <div class="form-group">
           <%= f.text_field :comment, rows: 3, class: "form-control "%>
         </div>

         <%= f.hidden_field :collection_id %>

         <div class="text-center">
           <%= f.submit "回答する", class: "btn btn-normal" %>
         </div>
      </div>
      <%end%>
    </div>

  </div>
</div>
