<div class="row">
    <div class="col-md-8 col-md-offset-3">

    <h2><%= @collection.title%></h2>
    <p><%= simple_format @collection.description %></p>

    <p><%= simple_format @collection.user.fullname %></p>

    <h3>回答されたアイデア</h3>
    <% if @collection.declears.any? %>
      <ul>
      <% @collection.declears.each do |declear| %>
      <li>
        <%= declear.comment %>
        <%= declear.user.fullname %>
      </li>
      <%end%>
      </ul>
      <%end%><br/>

    <div class="col-md-8 col-md-offset-3">
      <%= render partial: "declears/form" %>
    <div>
  </div>
</div>
