<% if @reviews.count == 0 %>
  <div class="text-center">
    <h4>コメントはありません</h4>
  </div>
<%else%>

  <% @reviews.order(id: :desc).each do |r| %>
   <br/>
   <div class="col-md-3 text-center">

     <strong><%= r.user.fullname %></strong>
   </div>
   <div class="col-md-9">
     <div><%= r.star%></div>


     <%end%>
   </div>
     <div><%= r.comment %></div>
 </div>
 <%end%>
